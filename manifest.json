{
  "manifest_version": 3,
  "name": "NotebookLM Suggestions Toggle",
  "version": "1.0",
  "description": "Adds a button to toggle the visibility of suggestion chips in NotebookLM.",
  "author": "Morganite",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://notebooklm.google.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
